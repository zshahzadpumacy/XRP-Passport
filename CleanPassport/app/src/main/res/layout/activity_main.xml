<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Initial Screen with Two Buttons -->
    <LinearLayout
        android:id="@+id/initialScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:visibility="visible">

        <!-- App Title -->
        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Passport Validator"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:layout_marginBottom="32dp" />

        <!-- Create DID Button -->
        <Button
            android:id="@+id/createDidButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create DID"
            android:backgroundTint="#6200EE"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:padding="14dp"
            android:layout_marginHorizontal="24dp"
            android:elevation="4dp"
            android:textStyle="bold" />

        <!-- Verify DID Button -->
        <Button
            android:id="@+id/verifyDidButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verify DID"
            android:backgroundTint="#03DAC5"
            android:textColor="#FFFFFF"
            android:padding="14dp"
            android:layout_marginHorizontal="24dp"
            android:elevation="4dp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Create DID Screen (Initially Hidden) -->
    <LinearLayout
        android:id="@+id/createDidScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:padding="16dp">

        <!-- XRP Secret Input -->
        <EditText
            android:id="@+id/xrpSecretInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter XRP Secret"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:background="@android:drawable/editbox_background" />

        <!-- Create Button -->
        <Button
            android:id="@+id/createButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create"
            android:backgroundTint="#6200EE"
            android:textColor="#FFFFFF"
            android:padding="14dp"
            android:layout_marginHorizontal="24dp"
            android:elevation="4dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/backToInitialButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:backgroundTint="#03DAC5"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:layout_marginHorizontal="24dp"/>
        <TextView
            android:id="@+id/CreateStatusLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Identity Creation Status:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/CreateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Result will appear here"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"/>
        <TextView
            android:id="@+id/CreateDIDLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DID:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/CreateDIDView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DID will appear here"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:textIsSelectable="true"
            android:elevation="4dp"/>
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:indeterminate="true"
            android:indeterminateTint="@color/teal_200" />





    </LinearLayout>

    <!-- Verification Screen (Initially Hidden) -->
    <ScrollView
        android:id="@+id/verificationScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/appTitleVerification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verify DID"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <EditText
                android:id="@+id/privateKeyInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Private Key (Hexadecimal)"
                android:inputType="text"
                android:textSize="16sp"
                android:padding="12dp"
                android:background="@android:drawable/editbox_background"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/didInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter DID String"
                android:inputType="text"
                android:textSize="16sp"
                android:padding="12dp"
                android:background="@android:drawable/editbox_background"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/generateSignatureButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Validate DID"
                android:backgroundTint="#6200EE"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="24dp"
                android:padding="12dp" />

            <!-- Back Button -->
            <Button
                android:id="@+id/backButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back"
                android:backgroundTint="#03DAC5"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp"
                android:padding="12dp" />

            <TextView
                android:id="@+id/verificationStatusLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verification Status:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/signatureTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Result will appear here"
                android:textSize="16sp"
                android:padding="12dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:elevation="4dp" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
